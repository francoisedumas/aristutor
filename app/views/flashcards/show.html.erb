<div class="main-wrapper flashcard-wrapper">

  <%# Card progression %>
  <p class="counter-flashcard">
    <span class="current-flashcard" %><%= @number_total_passed %></span>/<%= @number_total %>
  </p>
  
  <%# Summary title %>
  <h1><%= @summary.title.capitalize! %></h1>

  <%# Bar progression %>
  <div class="bar">
    <div class="percentage" style="width: <%= @percentage %>%"></div>
  </div>

  <%# Flashcard recto %>
  <div class="question">
    
    <%# Flashcard question %>
    <div>
      <% if @flashcard.is_a? Mistake %>
        <p>Ecrivez correctement la phrase suivante :</p>
        <h2><%= @flashcard.wrong_content %> </h2>
      <% elsif @flashcard.is_a? Word %>
        <p>Traduisez le mot suivant</p>
        <h2><%= @flashcard.word %></h2>
      <% elsif @flashcard.nil? %>
        <p>Well done</p>
      <% end %>
    </div>
    
    <%# Student answer %>
    <div>
      <input type="text" name="answer" placeholder="Tapez votre rÃ©ponse">
    </div>

    <%# Button flip card %>
    <button class="btn txt-orange flip-card">Flip card</button>

  </div>

  <%# Flashcard verso %>
  <div class="answer">
    
    <%# Flashcard answer %>

    <%# Button know / didn't know %>

  </div>
  
</div>
