<div class="main-wrapper">

<%# Header %>
  <div class="nav">
    <%= link_to :back, class: "btn btn-small txt-grey", method: :get do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
    <h2>Edit the summary</h2>
    <div></div>
  </div>

<%# Formulaire %>
  <%= form_for([@course, @summary], url: course_summary_path(course_id: @course&.id || @summary.course_id, id: @summary.id), method: :put) do |f| %>
    <%= f.text_field :title, placeholder: "Theme", label: false %>
    <%= f.text_area :overview, placeholder: "Overview", label: false %>
    <%= f.submit 'Save the summary', :class => 'btn btn-large txt-white' %>
  <% end %>

</div>
