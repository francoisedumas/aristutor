<div class="main-wrapper">

  <%# Header %>
  <div class="nav">
    <%= link_to :back, class: "btn btn-small txt-grey", method: :get do %>
      <i class="fas fa-chevron-left"></i>
    <% end %>
    <h2><%= @summary.title %></h2>
    <%= link_to edit_course_summary_path(@summary), class: "btn btn-small txt-orange", method: :get do %>
      <i class="fas fa-pen"></i>
    <% end %>
  </div>
  
  <%# Overview %>
  <div class="card-summary">
    <div class="card-summary-infos">
      <p class="summary">Overview</p>
      <p class="flashcard"><%= @summary.overview %></p>
    </div>
  </div>

  <%# Vocabulary box %>
  <div class="card-summary">
    <div class="card-summary-infos">
      <p class="summary">Vocabulary box</p>
      <p class="flashcard"><%= @summary.words %></p>
      <% @summary.words.each do |word| %>
        <p class="flashcard"><%= word.word %> => <%= word.translation %></p>
      <% end %>
    </div>
  </div>

  <%# Mistakes box %>
  <div class="card-summary">
    <div class="card-summary-infos">
      <p class="summary">Mistakes box</p>
      <% @summary.mistakes.each do |mistake| %>
        <p class="flashcard"><%= mistake.wrong_content %> => <%= mistake.correct_content %></p>
      <% end %>
    </div>
  </div>

  <%# Send button %>
  <%= link_to "Save the summary", summary_flashcards_path(@summary), class: 'btn btn-large txt-white' %>

</div>
