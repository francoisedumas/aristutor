<div class="input-words-box">
  <%= f.text_field :word,
    class: 'input-words-box-word' %>
  <%= f.text_field :translation,
    class: 'input-words-box-translation' %>

  <%= f.hidden_field :_destroy %>
  <%= remove_associated_record(tag: :span) do %>
    <span class="text-2xl text-white absolute cursor-pointer"  style="top: 8px; right: 30px;">
      <i class="far fa-times-circle absolute text-2xl"></i>
    </span>
  <% end %>
  <!-- need to find a way to remove word and translation in order to use the destroy from the model -->
</div>
