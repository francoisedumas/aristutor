<h2>New student</h2>

<%= simple_form_for(@student, url: courses_path, method: :post) do |f| %>
  <%= f.input :email,
              required: false,
              autofocus: true %>
  <%= f.input :first_name, placeholder: "First name", label: false %>
  <%= f.input :last_name, placeholder: "Last name", label: false %>
  <%= f.input :phone_number, placeholder: "Phone number", label: false %>
  <%= f.input :mother_language, placeholder: "Mother language", label: false %>
  <%= f.submit %>
<% end %>