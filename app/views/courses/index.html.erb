<h1>My courses</h1>

<h2>search bar</h2>
<%= form_tag courses_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a student"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<h2>All students</h2>

<% @courses.each do |course|%>
  <% if course.student.photo.attached? %>
    <%= cl_image_tag course.student.photo.key %>
  <% else %>
    <p>Missing image</p>
  <% end %>
  <p><%= course.student.first_name %></p>
  <p><%= course.student.last_name %></p>
<% end %>
